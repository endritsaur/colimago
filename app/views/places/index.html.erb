<h1>Listing places</h1>

<%= link_to 'New place', new_place_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th>Keywords</th>
        <th colspan="2"></th>
    </tr>

    <% @places.each do |place| %>
        <tr>
            <td><%= place.title %></td>
            <td><%= place.coordinates %></td>
            <td><%= place.keywords %></td>
            <td><%= link_to 'Show', place_path(place) %></td>
            <td><%= link_to 'Edit', edit_place_path(place) %></td>
        </tr>
    <% end %>
</table>